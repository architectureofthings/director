set -ex

mkdir build
cd build
cmake \
  -DBUILD_SHARED_LIBS=ON \
  -DCMAKE_BUILD_TYPE=Release \
  -DBUILD_TESTING=OFF \
  -DVTK_RENDERING_BACKEND=OpenGL2 \
  -DModule_vtkGUISupportQt=ON \
  -DVTK_WRAP_PYTHON=ON \
  -DVTK_QT_VERSION=5 \
  -DVTK_PYTHON_VERSION=3 \
  -DCMAKE_INSTALL_PREFIX=/root/install \
  ../VTK-8.0.0
